<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.Profile.ProfileEditActivity">


    <ImageButton
        android:id="@+id/btn_GoBackProfile_fromProfileEdit"
        android:layout_width="0dp"
        android:layout_height="38dp"
        android:layout_marginStart="43dp"
        android:layout_marginTop="53dp"
        android:layout_marginEnd="207dp"
        android:src="@drawable/arrow_left_2"
        android:background="#00000000"
        app:layout_constraintEnd_toStartOf="@+id/btn_completion"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="52dp"
        android:text="프로필 편집"
        android:textColor="#3c3c3c"
        android:textSize="28sp"
        android:textStyle="bold"
        app:layout_constraintStart_toEndOf="@+id/btn_GoBackProfile_fromProfileEdit"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btn_completion"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="52dp"
        android:layout_marginEnd="32dp"
        android:text="완료"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/btn_GoBackProfile_fromProfileEdit"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageButton
        android:id="@+id/btn_profileImage"
        android:layout_width="94dp"
        android:layout_height="103dp"
        android:layout_marginStart="160dp"
        android:layout_marginTop="164dp"
        android:src="@drawable/profile"

        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="42dp"
        android:layout_marginTop="300dp"
        android:gravity="center_horizontal"
        android:lineSpacingExtra="8sp"
        android:textColor="#707070"
        android:textSize="16sp"
        android:textStyle="normal"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:text="닉네임" />

    <EditText
        android:layout_width="344dp"
        android:layout_height="70dp"
        android:layout_marginStart="42dp"
        android:layout_marginTop="334dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:hint="변경하실 닉네임을 써주세요"
        android:background="@drawable/edit_text_round"
        ></EditText>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="42dp"
        android:layout_marginTop="430dp"
        android:gravity="center_horizontal"
        android:lineSpacingExtra="8sp"
        android:textColor="#707070"
        android:textSize="16sp"
        android:textStyle="normal"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:text="MBTI" />

    <EditText

        android:layout_width="344dp"
        android:layout_height="70dp"
        android:layout_marginStart="40dp"
        android:layout_marginTop="464dp"
        android:background="@drawable/edit_text_round"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:hint="변경하실 mbti를 골라주세요"></EditText>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="42dp"
        android:layout_marginTop="562dp"
        android:gravity="center_horizontal"
        android:lineSpacingExtra="8sp"
        android:textColor="#707070"
        android:textSize="16sp"
        android:textStyle="normal"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:text="비밀번호" />

    <EditText

        android:layout_width="344dp"
        android:layout_height="70dp"
        android:layout_marginStart="40dp"
        android:layout_marginTop="596dp"
        android:background="@drawable/edit_text_round"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:hint="변경하실 닉네임을 써주세요"></EditText>


</androidx.constraintlayout.widget.ConstraintLayout>