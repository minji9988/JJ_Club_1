<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingBottom="30dp"
    >
activity_home_posts_item.xml

        <!-- 흰색 네모 배경 ImageButton -->
        <View
            android:id="@+id/item_popular_post_button"
            android:layout_width="345dp"
            android:layout_height="199dp"
            android:background="@drawable/home_round_white_box"
          />


        <!-- 모임 대표 사진 ImageButton -->
        <ImageView
            android:id="@+id/item_popular_post_img"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_marginLeft="26dp"
            android:layout_marginTop="40.8dp"
            android:background="@drawable/round_gray_box"
            />


        <!-- 홍보글 제목 TextView -->
        <TextView
            android:id="@+id/item_popular_post_title"
            android:layout_width="180dp"
            android:layout_height="29dp"
            android:textSize="20sp"
            android:textColor="#3c3c3c"
            android:text="홍보글 제목"
            android:textStyle="bold"
            android:layout_marginTop="36.8dp"
            android:layout_marginLeft="117dp"
            />


        <!-- 홍보글 간략 소개 TextView -->
        <TextView
            android:id="@+id/item_popular_post_contents"
            android:layout_width="200dp"
            android:layout_height="47dp"
            android:textSize="16sp"
            android:textColor="#3c3c3c"
            android:text="홍보글 내용이 들어갑니다. 이런 저런 이야기들."
            android:layout_marginTop="78.5dp"
            android:layout_marginLeft="117dp"
            />

        <!-- 'D -' TextView -->
        <TextView
            android:id="@+id/item_popular_post_d_day"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="D  -"
            android:textColor="#1c7eff"
            android:textStyle="bold"
            android:textSize="17sp"
            android:layout_marginTop="154.8dp"
            android:layout_marginLeft="89dp"
            />

        <!-- 'day'  TextView -->
        <TextView
            android:id="@+id/item_popular_post_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="17"
            android:textColor="#1c7eff"
            android:textStyle="bold"
            android:textSize="17sp"
            android:layout_marginTop="154.8dp"
            android:layout_marginLeft="120dp"
            />

        <!-- love icon -->
        <ImageButton
            android:id="@+id/item_popular_white_love"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="210.5dp"
            android:layout_marginTop="155.4dp"
            android:background="@drawable/love_outline"
            />

        <!-- love-count  TextView -->
        <TextView
            android:id="@+id/item_popular_post_love_count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0"
            android:textColor="#3c3c3c"
            android:textStyle="bold"
            android:textSize="17sp"
            android:layout_marginTop="153dp"
            android:layout_marginLeft="248dp"
            />



</RelativeLayout>