<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="110dp"
        android:layout_marginTop="304dp"
        android:layout_marginEnd="85dp"
        android:layout_marginBottom="399dp"
        android:lineSpacingExtra="9sp"
        android:text="당신이 자주 하는 생각은?"
        android:textColor="#3c3c3c"
        android:textSize="20sp"
        android:textStyle="normal" />

    <android.widget.Button
        android:layout_width="344dp"
        android:layout_height="60dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="51dp"
        android:layout_marginLeft="42dp"
        android:layout_marginTop="579dp"
        android:layout_marginEnd="32dp"
        android:layout_marginBottom="168dp"
        android:background="@drawable/btn_round_blue_box"
        android:text="지난 시험 문제는 어떻게 나왔지?"
        android:textColor="#ffffff"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/textViewType"
        android:layout_width="110dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="161dp"
        android:layout_marginTop="269dp"
        android:layout_marginEnd="140dp"
        android:layout_marginBottom="399dp"
        android:lineSpacingExtra="9sp"
        android:text="시험 기간 때"
        android:textColor="#3c3c3c"
        android:textSize="20sp"
        android:textStyle="normal" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="82dp"
        android:layout_marginTop="118dp"
        android:layout_marginEnd="59dp"
        android:gravity="center_horizontal"
        android:lineSpacingExtra="14sp"
        android:text="Q5"
        android:textColor="#1c7eff"
        android:textSize="40sp"
        android:textStyle="bold" />

    <android.widget.Button
        android:id="@+id/button_login"
        android:layout_width="344dp"
        android:layout_height="60dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="50dp"
        android:layout_marginLeft="42dp"
        android:layout_marginTop="579dp"
        android:layout_marginEnd="33dp"
        android:layout_marginBottom="248dp"
        android:background="@drawable/btn_round_blue_box"
        android:text="시험은 왜 존재하는가?"
        android:textColor="#ffffff"
        android:textSize="18sp" />

</RelativeLayout>