<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.mainpage.FilterActivity">

    <ImageButton
        android:id="@+id/btn_GoBackHome_fromFilter"
        android:layout_width="0dp"
        android:layout_height="38dp"
        android:layout_marginStart="43dp"
        android:layout_marginTop="53dp"
        android:background="#00000000"
        android:src="@drawable/arrow_left_2"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="88dp"
        android:layout_marginTop="52dp"
        android:text="필터"
        android:textColor="#3c3c3c"
        android:textSize="28sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btn_completion"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="52dp"
        android:layout_marginEnd="32dp"
        android:text="완료"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.986"
        app:layout_constraintStart_toEndOf="@+id/btn_GoBackHome_fromFilter"
        app:layout_constraintTop_toTopOf="parent" />


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="유형"
        android:layout_marginStart="43dp"
        android:layout_marginTop="120dp"
        android:textStyle="bold"
        android:textSize="23sp"
        android:textColor="#3c3c3c"
        android:lineSpacingExtra="11sp"
        android:gravity="center_horizontal"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <Button
        android:id="@+id/button"
        android:layout_width="94dp"
        android:layout_height="45dp"
        android:text="스터디"

        tools:layout_editor_absoluteX="43dp"
        tools:layout_editor_absoluteY="157dp" />

    <Button
        android:id="@+id/button2"
        android:layout_width="94dp"
        android:layout_height="45dp"
        android:text="동아리"
        tools:layout_editor_absoluteX="161dp"
        tools:layout_editor_absoluteY="157dp" />

    <Button
        android:id="@+id/button3"
        android:layout_width="94dp"
        android:layout_height="45dp"
        android:text="기타"
        tools:layout_editor_absoluteX="282dp"
        tools:layout_editor_absoluteY="157dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="단과대"
        android:layout_marginStart="43dp"
        android:layout_marginTop="220dp"
        android:textStyle="bold"
        android:textSize="23sp"
        android:textColor="#3c3c3c"
        android:lineSpacingExtra="11sp"
        android:gravity="center_horizontal"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <Button
        android:text="스포츠 "
        android:layout_width="94dp"
        android:layout_height="45dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginStart="43dp"
        android:layout_marginTop="260dp"/>


