<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.promotion.PromotionPage">

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="28dp"
        android:layout_height="24dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="43dp"
        android:layout_marginTop="53dp"
        android:background="#00000000"
        android:src="@drawable/arrow_left"></ImageView>

    <android.widget.Button
        android:id="@+id/button_next5"
        android:layout_width="77dp"
        android:layout_height="48dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_marginTop="42dp"
        android:layout_marginRight="42dp"
        android:background="@drawable/btn_round_blue_box"
        android:text="신청하기"
        android:textColor="#ffffff"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/textView9"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_marginLeft="107dp"
        android:layout_marginTop="326dp"
        android:layout_marginRight="107dp"
        android:gravity="center_horizontal"
        android:lineSpacingExtra="11sp"
        android:text="동아리 이름"
        android:textColor="#3c3c3c"
        android:textSize="24sp"
        android:textStyle="bold" />

    <com.google.android.material.tabs.TabLayout
        android:id="@+id/information_tap"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentLeft="true"
        android:layout_marginRight="103dp"
        android:layout_marginLeft="103dp"
        android:layout_marginTop="389dp"
        app:tabIndicatorColor="@null"
        app:tabSelectedTextColor="#3c3c3c"
        app:tabTextColor="#939393"
        app:tabTextAppearance="@style/tab_font">

        <com.google.android.material.tabs.TabItem
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="정보" />

        <com.google.android.material.tabs.TabItem
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="후기" />

        <com.google.android.material.tabs.TabItem
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Q&amp;A" />

    </com.google.android.material.tabs.TabLayout>

    <!-- Content for TabItem "정보" -->
    <FrameLayout
        android:id="@+id/tab_content_info"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/information_tap">

        <com.google.android.material.tabs.TabLayout
            android:id="@+id/inside_information_tap"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_marginTop="228dp"
            android:layout_gravity="center_horizontal"
            app:tabIndicatorColor="@null"
            app:tabSelectedTextColor="#3c3c3c"
            app:tabTextAppearance="@style/tab_font_2"
            app:tabTextColor="#939393">

            <com.google.android.material.tabs.TabItem
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="소개" />

            <com.google.android.material.tabs.TabItem
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="게시판" />

            <com.google.android.material.tabs.TabItem
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="캘린더" />

            <com.google.android.material.tabs.TabItem
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="채팅" />

        </com.google.android.material.tabs.TabLayout>

        <!-- Content for TabItem "정보" -->
        <FrameLayout
            android:id="@+id/tab_content_intro"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@id/information_tap">


            <!-- Add your information content views here -->

            <FrameLayout
                android:id="@+id/tab_content_chat"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_below="@id/information_tap">

                <!-- Add your Q&A content views here -->

            </FrameLayout>
        </FrameLayout>

        <!-- Content for TabItem "후기" -->
        <FrameLayout
            android:id="@+id/tab_content_board"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@id/information_tap">

            <!-- Add your reviews content views here -->

        </FrameLayout>

        <!-- Content for TabItem "Q&A" -->
        <!-- Add your information content views here -->

    </FrameLayout>

    <!-- Content for TabItem "후기" -->
    <FrameLayout
        android:id="@+id/tab_content_reviews"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/information_tap">

        <!-- Add your reviews content views here -->

    </FrameLayout>

    <!-- Content for TabItem "Q&A" -->
    <FrameLayout
        android:id="@+id/tab_content_qa"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/information_tap">

        <!-- Add your Q&A content views here -->

    </FrameLayout>

</RelativeLayout>
</ScrollView>